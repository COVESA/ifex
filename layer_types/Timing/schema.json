      "items": {
        "$ref": "#/definitions/Namespace"
      }
    }
  },
  "required": ["namespaces"],
  "additionalProperties": false,
  "definitions": {
    "TimingFields": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
