        },
        "frequency": {
          "type": ["number", "string"]
        },
        "min_period": {
          "type": ["number", "string"]
        },
        "min_frequency": {
          "type": ["number", "string"]
        },
        "max_period": {
          "type": ["number", "string"]
        },
        "max_frequency": {
          "type": ["number", "string"]
        },
        "action": {
          "type": "string"
        },
        "datatype": {
          "type": "string"
        }
      },
      "anyOf": [
        {
          "required": ["name"]
        },
        {
          "required": ["datatype"]
        }
      ] ,
      "additionalProperties": false
    },
    "Namespace": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "events": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimingFields"
          }
        },
        "methods": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimingFields"
          }
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimingFields"
          }
        },
        "namespaces": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Namespace"
          }
        },
        "interface": {
          "type": "object",
          "$ref": "#/definitions/Interface"
        }
      },
      "required": [
        "name",
        "interface"
      ],
      "additionalProperties": false
    },
    "Interface": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "events": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimingFields"
          }
        },
        "methods": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimingFields"
          }
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimingFields"
          }
        },
        "namespaces": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Namespace"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}

